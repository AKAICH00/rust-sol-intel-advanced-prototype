# ==============================================
# RUSTYMEMEGOAT Configuration Template
# Copy this to .env and fill in your values
# ==============================================

# Jupiter API Configuration
JUPITER_API_URL=https://api.jup.ag
JUPITER_API_KEY=your-jupiter-api-key-here

# Solana RPC Configuration
HELIUS_RPC_URL=your-helius-rpc-url-here
# Alternative: SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Wallet Configuration (KEEP SECURE!)
# Path to your Solana wallet keypair JSON file
WALLET_PATH=./wallet.json

# Database Configuration
DATABASE_PATH=./trading_engine.db

# Risk Management Settings
STARTING_CAPITAL_USD=1000.0
MAX_POSITION_SIZE_USD=200.0
MAX_POSITION_PCT_PORTFOLIO=0.20
HARD_STOP_LOSS_PCT=0.05
TRAILING_STOP_LOSS_PCT=0.03
PORTFOLIO_STOP_LOSS_PCT=0.15
MAX_POSITIONS=5
KELLY_FRACTION=0.25

# Execution Settings
MAX_SLIPPAGE_BPS=50
MAX_PRICE_IMPACT_BPS=100
PRIORITY_FEE_LAMPORTS=5000

# QuestDB Time-Series Database
QUESTDB_URL=http://localhost:9000

# Qdrant Vector Database
QDRANT_URL=http://localhost:6334

# ML Model Configuration
MODEL_PATH=./lstm_autoencoder.onnx
FEATURE_WINDOW_SIZE=50
CONFIDENCE_THRESHOLD=0.8

# WebSocket Data Feed
WS_URL=wss://api.jup.ag/ws/v1/quotes
MARKET=BONK/SOL

# Monitoring & Metrics
METRICS_PORT=9090
LOG_LEVEL=info

# Optional: Jaeger Tracing
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
